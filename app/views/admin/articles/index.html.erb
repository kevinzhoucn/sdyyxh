<h1>文章列表</h1>
<br />
<% link_to 'New Article', new_admin_article_path %>

<table class="table table-striped span8">
  <tr>    
    <th>标题</th>    
    <th>发布日期</th>        
    <th></th>
    <th></th>    
  </tr>

<% @articles.each do |article| %>
  <tr>    
    <td><%= article.title %></td>
    <td><%= article.published_at.strftime('%Y-%m-%d %H:%M:%S').to_s %></td>
    <td><% article.category_id %></td>
    <td><%= link_to '查看', admin_article_path(article) %>    
    <%= link_to '编辑', edit_admin_article_path(article) %>
    <%= link_to '删除', admin_article_path(article), method: :delete, data: { confirm: '确定删除?' } %></td>
  </tr>
<% end %>
</table>
<div class="span6"><%= will_paginate @articles %></div>
<br />