<div class="row">            
  <%= render :partial => 'layouts/common/carousel', :locas => {} %>
</div>
<div class="row">    
	<div class="span9">
		<% ['会员名录', '新闻动态', '剧场信息', '艺术团体'].each_with_index do |section, index| %>
			<div class="span4 well" style="background-color:white;margin-left:0px;margin-right:20px">
				<% Category.find_by_name(section) do |member| %>				
					<div style="background:#f5f7f8;border:1px solid #f5f7f8">
					  <i class="icon-user icon-large" style="color:red"></i>
					  <span style="margin-left:10px;color:red;font-weight:bold"><%= member.name %></span>
					</div>
				  <ul style="margin-top:10px;margin-left:15px">
				  	<% member.get_recent_article.each do |article| %>
				  		<% if article.published %>
					  		<li style="color:red">
					  			<%= link_to article.title, article, html_options = { :style => "color:red;font-size:90%" } %>
					  		</li>
					  	<% end %>
				  	<% end %>
				  </ul>
				<% end %>
			</div>
			<% if index==1 %>
				<div class="span8 well" style="padding:0px">
					<%= image_tag('middle.png') %>
				</div>
			<% end %>
		<% end %>
	</div>
	<div class="span3 well" style="margin:10px 0px 20px 0px;background-color:white;padding:0px;">
		<%= image_tag('right_panel.png') %>
	</div>
	<div class="span3 well" style="margin:0px;background-color:white;padding-right:0px;">
		<i class="icon-music icon-large" style="color:red"></i>
		<span style="margin-left:10px;color:red;font-weight:bold">演出票务</span>
	</div>
</div>
